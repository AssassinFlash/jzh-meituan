{
	"easycom": {
		"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "jzh外卖"
			}
		}, {
			"path": "pages/order/order",
			"style": {
				"navigationBarTitleText": "订单",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/center/center",
			"style": {
				"navigationBarTitleText": "个人中心",
				"enablePullDownRefresh": false
			}

		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "jzh外卖",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"color": "#999794",
		"selectedColor": "#33312E",
		"borderStyle": "black",
		"backgroundColor": "#fafafa",
		"list": [{
				"pagePath": "pages/index/index",
				"iconPath": "static/tab/shouyea.png",
				"selectedIconPath": "static/tab/shouyeb.png",
				"text": "首页"
			},
			{
				"pagePath": "pages/order/order",
				"iconPath": "static/tab/dingdana.png",
				"selectedIconPath": "static/tab/dingdanb.png",
				"text": "订单"
			}, {
				"pagePath": "pages/center/center",
				"iconPath": "static/tab/wodea.png",
				"selectedIconPath": "static/tab/wodeb.png",
				"text": "个人中心"
			}
		]
	}
